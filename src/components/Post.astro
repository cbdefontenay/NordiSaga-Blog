---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";

type Props = {
  post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
---

<article class="h-full mx-10">
  <a href={`/blog/${post.slug}`}>
    <Image
      src={post.data.image}
      alt={post.data.title}
      width={300}
      height={300}
      format="webp"
      class="rounded-2xl shadow-xl mb-2 aspect-thumbnail object-cover"
    />
  </a>

  <a
    href={`/blog/${post.slug}`}
    class="text-lg md:text-2xl text-zinc-900 mb-10 font-semibold inline-block"
  >
    {post.data.title} >
  </a>
  <!-- 
  <span class="text-zinc-700 text-xl">
    {post.data.date}
  </span> -->
</article>
