---
import Footer from "../components/Footer.astro";
import Nav from "../components/NavBar";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  image?: string;
}

const { title, image = "./images/logo.jpg" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.jpg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} /><ViewTransitions />
    <title>{title}</title>
  </head>
</html><body class="bg-lightBg">
  <Nav client:load />

  <slot />
  <!-- content is injected here -->
  <footer class="mt-20">
    <Footer />
  </footer>
  <style is:global>
    @font-face {
      font-family: "skranjiBold";
      src: url("/fonts/Skranji-Bold.woff2") format("woff2");
      font-weight: bold;
      font-style: 700;
    }
    @font-face {
      font-family: "skranjiRegular";
      src: url("/fonts/Skranji-Regular.woff2") format("woff2");
      font-weight: normal;
      font-style: 400;
    }
    @font-face {
      font-family: "robotoRegular";
      src: url("/fonts/RobotoSerif-Regular.woff2") format("woff2");
      font-weight: normal;
      font-style: 400;
    }
    @font-face {
      font-family: "robotoMedium";
      src: url("/fonts/RobotoSerif-Medium.woff2") format("woff2");
      font-weight: medium;
      font-style: 500;
    }
  </style>
</body>
