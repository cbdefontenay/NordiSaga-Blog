---
import Layout from "../layouts/Layout.astro";
import * as about from "./md/about.mdx";
import { Content as AboutContent } from "./md/about.mdx";
---

<Layout title="A Propos | NordiSaga">
  <div class="flex flex-col items-center h-full w-full">
    <h1 class="font-skranjiBold text-blue-300 text-lg md:text-xl">
      Quest-ce que NordiSaga ?
    </h1>
  </div>
  <div
    class="prose prose-lg lg:prose-2xl overflow-visible font-robotoRegular relative w-screen overflow-x-hidden px-5 md:px-0 flex flex-col justify-center mb-10 mt-12 md:mt-20 lg:ml-72 text-justify"
  >
    <div class="text-lg md:text-xl font-skranjiRegular text-gray-200">
      {about.frontmatter.title}
    </div>

    <div class="items-center justify-center text-gray-50">
      {about.frontmatter.header}
    </div>

    <div class="text-sm my-12 px-5 text-slate-300">
      <AboutContent />
    </div>
  </div>
</Layout>
